<div class='page'>
  {{#with header}}
    <div class='header'>
      <header class='header__content'>
        <div class='header__block'>
          <img
            src='/svg/apple.svg'
            alt='Apple'
            class='header__icon'
          />

          <nav class='header__block'>
            {{#each links}}
              <a
                href='{{url}}'
                class='header__link'
              >{{text}}</a>
            {{/each}}
          </nav>
        </div>

        <div class='header__action'>
          <img
            src='/svg/search.svg'
            alt='Search'
            class='header__icon'
          />
          <img
            src='/svg/profile.svg'
            alt='Profile'
            class='header__icon'
          />
        </div>
      </header>
    </div>
    
    {{#with ad}}
      <div class="header__ad">
        <div class="header__ad__content">
          <span class="header__ad__title">{{title}}</span>
          <div class='header__ad__action'>
            <a href="{{link.url}}" class="header__ad__link">{{link.text}}</a>
          </div>
        </div>
      </div>
    {{/with}}

  {{/with}}

  {{#with iphone_pro}}
